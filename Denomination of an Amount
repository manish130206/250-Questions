#include <stdio.h>

int main() {
    int amount;
    
    printf("Enter the amount: ");
    scanf("%d", &amount);

    int denominations[] = {1000, 500, 100, 50, 20, 10, 5, 2, 1};
    
    for (int i = 0; i < 9; i++) {
        if (amount >= denominations[i]) {
            int count = amount / denominations[i];
            amount = amount % denominations[i];
            printf("â‚¹%d: %d\n", denominations[i], count);
        }
    }

    return 0;
}
