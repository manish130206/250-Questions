
#include <stdio.h>
#include<string.h>

int main() {
    char str[50],str1[50],ch;
    int count=0,len;
    
    printf("Enter String : ");
    scanf("%[^\n]s",&str);
    
    printf("Enter Character to find : ");
    scanf(" %c",&ch);
    
     len=strlen(str);
     
     for(int i=0;i<len;i++){
         if(str[i]==ch){
             printf("The Character Found at %d Position ",i+1);
             return 0;
         }
         
     }
    
    return 0;
}
