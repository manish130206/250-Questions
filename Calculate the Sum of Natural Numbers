#include <stdio.h>

int main() {
    int n;
    long long sum;

    printf("Enter a positive integer: ");
    scanf("%d", &n);

    if (n < 1) {
        printf("Please enter a positive integer.\n");
    } else {
        sum = (long long)n * (n + 1) / 2;
        printf("The sum of the first %d natural numbers is: %lld\n", n, sum);
    }

    return 0;
}
