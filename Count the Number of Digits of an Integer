#include <stdio.h>

int main() {
    int num, count = 0;

   
    printf("Enter an integer: ");
    scanf("%d", &num);

    
    if (num < 0) {
        num = -num; 
    }

    
    do {
        count++;  
        num /= 10;  
    } while (num != 0);

    
    printf("The number of digits is: %d\n", count);

    return 0;
}
